<!--components/signature/signature.wxml-->
<view class="wrapper">
  <view class="handBtn">
    <button catchtap="goBack" class="returnBtn delBtn">返回</button> 
    <button catchtap="retDraw" class="delBtn">清除</button>
    <button catchtap="subCanvas" class="subBtn">完成</button> 
  </view>
  <view class="handCenter">
    <canvas class="handWriting" disable-scroll="true" bindtouchstart="uploadScaleStart" bindtouchmove="uploadScaleMove"
      bindtouchend="uploadScaleEnd" canvas-id="handWriting">
    </canvas>
  </view>
  <view class="handRight">
    <view class="handTitle">签名</view>
  </view>
</view>
