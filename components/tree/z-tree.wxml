<!--components/tree/z-tree.wxml-->
<block wx:for="{{treeData}}" wx:key="{{item.id}}">
  <view catchtap='toggle' data-id="{{item.id}}" data-isFolder="{{item.isFolder}}" data-url='{{item.url}}'>

    
    
    <view class="menu2-li" wx:if="{{item.pid == 0}}">
      <text>{{item.category_name}}</text>
      <image src="/images/arrow_d.png"></image>
    </view>

    <view wx:else>
      <view class="menu3-li" wx:if="{{item.isFolder}}">
        <view wx:if="{{item.hasArticle}}">
          <view class="{{item.isOpen?'plus':'open'}}"></view>
        </view>
        <view wx:else>
          <view class="{{item.isOpen?'open':'plus'}}"></view>
        </view>
        <text>{{item.category_name}}</text>
      </view>
      <view wx:else>
          <view wx:if="{{item.type == 1}}">
            <view class="menu6-li" data-url="{{item.content}}" bindtap="clickVideo">
            <text>{{item.category_name}}</text></view>
          </view>
            <view wx:if="{{item.lazerNum==2}}" data-id="{{item.article_id}}" class="menu3-li" bindtap="clickToDetail">{{item.article_title}}
            </view>
             <view wx:if="{{item.lazerNum==3}}" data-id="{{item.article_id}}" class="menu3-li" bindtap="clickToDetail">{{item.article_title}}
            </view>
            <view wx:if="{{item.lazerNum==4}}" class="menu6">
            <!-- <navigator url="/pages/self_service_new/self_service_detail/self_service_detail?id={{item.id}}" class="menu6-li">{{item.category_name}}</navigator> -->
              <view class="menu6-li" data-id="{{item.article_id}}" bindtap="clickToDetail">
              {{item.article_title}}</view>
            </view>
            <view wx:else class="menu3-li">
              
              {{item.category_name}}
            </view>

      </view>
    </view>

    <view id="video_shade_panel" class="video_shade" data-video-no="" wx:if="{{showVideo}}" style="display:block">
      <view class="video_box">
        <view class="video_title">
          <text>{{item.category_name}}</text>
          <view class="close_btn" bindtap="closeBtn">
            <image src="/images/video_close.png"></image>
          </view>
        </view>
        <video id="myVideo" src="{{url}}" bindfullscreenchange="true"  danmu-btn controls></video>
      </view>
    </view>

    <!--<text wx:if="{{item.isFolder}}">{{item.isOpen?'[-]':'[+]'}}</text>-->
    <!-- <view wx:if="{{item.hasChildren}}" class="item">
      <z-tree tree="{{item.children}}"></z-tree>
    </view>
    <view wx:if="{{item.hasArticle}}" class="item">
      <z-tree tree="{{item.article_list}}"></z-tree>
    </view> -->

    <view wx:if="{{item.isFolder && item.isOpen && !item.hasBoth}}" class="item">
      <z-tree tree="{{item.children}}"></z-tree>
    </view>
    <view wx:else class="item">
      <view wx:if="{{item.hasArticle && item.hasChildren && item.hasBoth2}}" class="item">
        <z-tree tree="{{item.article_list}}"></z-tree> 
      </view>
      <view wx:if="{{item.hasArticle && item.hasChildren && item.hasBoth2}}" class="item">
        <z-tree tree="{{item.children}}"></z-tree>
      </view>
      <view wx:else class="item">
        <view wx:if="{{!item.hasBoth}}">
          <z-tree tree="{{item.article_list}}"></z-tree>
        </view>
      </view>
    </view>

  </view>
</block>
