
<!--index.wxml-->
<swiper indicator-dots="{{indicatorDots}}" indicator-active-color="{{indicatorActiveColor}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" style="width: 100%; height: 408rpx;" circular="{{true}}">
<!--"type":"mini","arg":"5",跳转小程序秒购页面  -->
  <block wx:for="{{imgUrls}}" wx:key="{{src}}" wx:for-index='index'>
    <swiper-item bindtap='gotoPoster' data-arg='{{item.arg}}' data-type='{{item.link_type}}' data-url='{{item.link}}'>
      <!-- <block wx:if="{{item.link_type == 'video'}}" style="width: 100%">
        <video src="{{item.src}}"  style="width: 100%;height: 408rpx;" loop='true' autoplay='true' object-fit="fill" class="slide-image"></video>
      </block> -->
      <image src="{{Server + item.src}}" class="slide-image" mode='widthFix' style="height: 408rpx;"></image>
      <view class='swiper_text'>{{item.title}}</view>
    </swiper-item>
  </block>
</swiper>

