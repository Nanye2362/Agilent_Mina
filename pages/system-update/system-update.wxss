/* pages/welcome/welcome.wxss */
page{
  background: #0085d5;
}
.welcome{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
  box-sizing: border-box;
  position: relative;
}
.avatar{ width: 600rpx; height: 130rpx; }
.motto{
  margin-top: 50rpx;
  color: #eee;
}
.bg{ 
  position: absolute;
  bottom: 100rpx;
  width: 750rpx;
  height: 381rpx;
 }
 .right{
   width: 400rpx;
   position: absolute;
   top: 50%;
   color: #fff;
   left: 50%;
   margin-left: -200rpx;
   text-align: center;
 }

 .right view{
  color: #fff;
 }
 .notReady{
   margin-top: 50rpx;
 }
 .enter{
   width: 300rpx;
   height: 80rpx;
   box-shadow: 0px 0px 1px 2px #AED1EE;
   position: absolute;
   bottom: 200rpx;
   border-radius: 5px;
   text-align: center;
   line-height: 80rpx;
   color: #eee;
   left: 50%;
   margin-left: -150rpx;
 }