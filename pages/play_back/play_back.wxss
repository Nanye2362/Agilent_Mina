page {
    background: #fff;
}

.tui-container {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding-bottom: env(safe-area-inset-bottom);
}

.header{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.header-r{
    margin-right: 10rpx;
}
.list{
    display: flex;
    flex-direction: column;
}
.item{
    display: flex;
    flex-direction: column;
    width: 90%;
    margin: 0 auto;
}
.title{

}
.video-wrapper{
    width: 100%;
    height: 350rpx;
    margin: 15rpx 0;
}
.video-host-wrapper{
    width: 100%;
    height: 350rpx;
    margin: 15rpx 0;
    position: relative;
}
.play-icon{
    position: absolute;
    top: 36%;
    left: 42%;
    width: 140rpx;
    height: 140rpx;
}
.slide-image{
    width: 100%;
    height: 100%;
}
.video-wrapper video{
    width: 100%;
    height: 100%;
}

