    width: 30rpx;
}
.bc_order_icon3 {
    width: 20rpx;
    margin-right: 10rpx;
}

.bc_order {
    margin-top: 40rpx;
    padding-bottom: 40rpx;
    border-bottom: 1px dashed #e2e2e2;
}
.bc_order_con{
  flex: 1;
  line-height: 1;
  margin-left: 10rpx;
}
.bc_order_arrow{
  flex: .1;
  text-align: right;
  line-height: 1;
}

.bc_order_con view{
  line-height: 40rpx;
}

.bc_confirm {
    margin-bottom: 60rpx;
}

.bc_chat {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
}

.bc_chat_btn {
    text-decoration: underline;
}
.chatimg{ width: 50rpx; height: 38rpx; vertical-align: sub;margin-right: 6rpx; margin-left: 10rpx;}

#confirm:disabled {
    background: #a6d5f1;
}

.bq_checkbox_panel{
  /* margin-top: 120rpx; */
  padding: 0 50rpx;
}


.invoiceType{
  padding: 22rpx 0;
  width: 520rpx;
}
.invoiceType:first-child{
  border-bottom: 1px solid #e2e2e2;
}
.invoiceD{
  margin-bottom: 6rpx;
}
.invoiceInformation{
  position: relative;
  margin-bottom: 10rpx;
}
.changeType{
  position: absolute;
  right: -10rpx;
  top: 0;
}
.shLoading-panel{
    top: 400rpx;
}
