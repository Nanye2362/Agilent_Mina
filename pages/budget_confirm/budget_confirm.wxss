/* pages/budget_confirm/budget_confirm.wxss */
page{
  background: #fff;
}
.budget_confirm {
    width: 100%;
}

.bc_title {
    margin: 40rpx 0;
}
.bc_title image{
  width: 200rpx;
}

.bc_remind {
    padding-bottom: 40rpx;
    line-height:1.5;
    border-bottom: 1px solid #e2e2e2;
}

.bc_remind1{
    padding-top: 40rpx;
    line-height:1.5;
    font-size: 22rpx;
}

.bc_order_icon {
    width: 44rpx;
    vertical-align: sub;
    margin-right: 8rpx;
    align-self: flex-start;
}
