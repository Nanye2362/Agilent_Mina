<!--pages/budget_confrim_info/budget_confirm_info.wxml-->
<view wx:if="{{showSignature}}">
  <signature showSignature="{{showSignature}}" bindcloseSignature='closeSignature'
    bindcompleteSignature='completeSignature'></signature>
</view>
<block wx:if="{{!pageComplete}}">
  <view>加载中...</view>
</block>
<view class='budget_confirm_info' wx:if="{{!showSignature&&pageComplete}}">
  <view class="bc_header">
    <view class="bc_title fs20 text-center">
      <image src='/images/repair_bq.jpg' mode='widthFix'></image>
    </view>
    <view class="bc_remind">您的送修报价单已经生成,BQ编号为:{{objectid}},请填写或确认开票信息，以便我们为您安排更多服务。</view>
  </view>
  <view class="bc_content">
    <view class="bc_item"  style="margin-bottom:20rpx;">
      <view class="bc_item_left" bindtap='openPDF' data-safe='0'>
        <image class="bc_order_icon" src="/images/pdf.png" mode='widthFix'></image>
        <span class="fc-blue fs28">安捷伦送修服务报价单</span>
      </view>
      <view wx:if="{{isConfirm==1}}" bindtap='downloadPDF' data-safe='0' class="bc_item_right">
        <image class="bc_order_icon" src="/images/download.jpg" mode='widthFix'></image>
        <span class="fc-blue fs28">下载</span>
      </view>
    </view>
    <view wx:if="{{isConfirm==1}}"  class="bc_item" style="margin-bottom:20rpx;">
      <view class="bc_item_left" bindtap='openPDF' data-safe='1'>
        <image class="bc_order_icon" src="/images/pdf.png" mode='widthFix'></image>
        <span class="fc-blue fs28">安捷伦健康安全声明</span>
      </view>
      <view class="bc_item_right" bindtap='downloadPDF' data-safe='1'>
        <image class="bc_order_icon" src="/images/download.jpg" mode='widthFix'></image>
        <span class="fc-blue fs28">下载</span>
      </view>
    </view>
    <view wx:if="{{isConfirm==0&&pageShow}}" class="bc_item" bindtap="toSafetyPage">
      <view class="bc_item_left">
        <image class="bc_order_icon" src="/images/pdf.png" mode='widthFix'></image>
        <span class="fc-blue fs28">请确认送修仪器是否含有相关危险物质</span>
      </view>
      <view wx:if="{{isConfirm==0}}" class="bc_item_right">
        <image class="bc_order_icon" src="/images/edit-2.png" mode='widthFix'></image>
        <span class="fc-blue fs28">编辑</span>
      </view>
    </view>
  </view>
  <!-- 有权限确认 -->
  <block wx:if="{{pageShow}}">
    <!-- 签名区域 -->
  <view class='signature_panel'>
    <label class="signature_label">联系人签字</label>
    <block wx:if="{{!showBackendSignature}}">
      <view wx:if="{{!isSignatured}}" class="signature_content" bindtap="toSignature"></view>
      <block wx:else>
        <view
          style="transform:rotate(270deg); background:#fff;height: 700rpx;width:296rpx;margin:0 auto;position:relative;top:-196rpx;border:1px solid #cbcbcb;">
          <image src="{{signatureImg}}" style="height:100%;width:100%;"></image>
        </view>
        <view class="add_btn_area" bindtap="{{isConfirm==0?'toSignature':''}}">
          <view class="{{isConfirm==0?'add_btn':''}}">{{isConfirm==0?'重签':''}}</view>
        </view>
      </block>
    </block>
    <block wx:else>
      <view style="width: 700rpx;height:296rpx;background:#fff;margin:0 auto;border:1px solid #cbcbcb;">
        <image src="{{signatureImg}}" style="height:100%;width:100%;"></image>
      </view>
    </block>
  </view>
  <view class="bq_checkbox_panel">
    <checkbox-group bindchange="contractConfirm">
      <label class="checkbox">
        <checkbox value="contract" disabled="{{isConfirm==1}}" checked="{{checkBox}}" color='#0085d5'
          style='transform:scale(.7);' />
        <text class='fc-777 fs12'>我已阅读并签名确认以上文件内容</text>
      </label>
    </checkbox-group>
  </view>
  <view class="bc_btn_area">
    <button class="btn bg-blue fc-fff" disabled="{{isConfirm==1}}"
      bindtap='submit'>{{isConfirm==1?'您已确认':'确认'}}</button>
  </view>
  <view class="bc_chat padding text-center fs12">如果对报价有任何问题，请<image class="chatimg" src="/images/wechat_b.png"></image>
    <meiqiaBtn bindmeiqiaTap="MtaReport" btn-class="fc-blue bc_chat_btn btn-meiqia" handle-alert="{{true}}"
      session-from="W_bqobjectid:{{bqId}}|transferAction={{transferAction}}">
      发起会话
    </meiqiaBtn>
  </view>
  </block>
  
</view>