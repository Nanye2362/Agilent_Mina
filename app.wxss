  height: 80rpx;
  background: #fff;
  opacity: .5;
  border-top-left-radius: 80rpx;
  border-bottom-left-radius: 80rpx;
  line-height: 80rpx;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.5);
  z-index: 5999;
}

.contactMeiqia {
  position: fixed;
  right: 0;
  bottom: 8%;
  width: 200rpx;
  height: 80rpx;
  background: #0287D2;
  border-top-left-radius: 80rpx;
  border-bottom-left-radius: 80rpx;
  line-height: 80rpx;
  box-shadow: 0px 0px 30px 0px rgba(155, 155, 155, 0.5);
  z-index: 5999;
}

.bH_img {
  width: 34rpx;
  height: 34rpx;
  margin-left: 20rpx;
  margin-right: 5px;
}

.bx_text {
  color: #666;
}



/* ==================shLoading===================== */
.shLoading-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 9990;
}

.shLoading-con {
  width: 210rpx;
  height: 210rpx;
  top: 236rpx;
  left: 50%;
  margin-left: -105rpx;
  background: #000;
  opacity: .6;
  position: fixed;
  z-index: 9999;
  border-radius: 12rpx;
  padding-top: 50rpx;
}

.shLoading-img {
  width: 79rpx;
  height: 64rpx;
  margin-bottom: 20rpx;
}

.shLoading-text {
  color: #fff;
}

.shLoading-panel {
  width: 620rpx;
  padding-bottom: 120rpx;
  top: 300rpx;
  left: 50%;
  margin-left: -310rpx;
  background: #fff;
  border: 1px solid #666;
  position: fixed;
  z-index: 9999;
  border-radius: 12rpx;
  padding-top: 50rpx;
}

.shLoading-input {
  border-bottom: 1px solid #eee;
  width: 480rpx;
  font-size: 34rpx;
  padding-bottom: 10rpx;
  padding-left: 5rpx;
  margin-bottom: 15rpx;
}

.shLoading-mask1 {
  top: 0;
  left: 0;
  background: #000;
  opacity: .6;
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 9990;
}

.shLoading-title {
  position: relative;
  width: 100%;
  height: 100rpx;
  margin-top: -50rpx;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}

.shLoading-title-img {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: -15rpx;
  top: -20rpx;
}

.shLoading-head-panel {
  min-height: 80rpx;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}

.shLoading-head-img {
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.shLoading-head-panel-info {
  padding-bottom: 20rpx;
  display: block;
  font-weight: 600;
}

.shLoading-btn-panel {
  position: absolute;
  bottom: 3rpx;
  height: 100rpx;
  width: 90%;
  border-top: 1px solid #eee;
}

.shLoading-btn-cancel,
.shLoading-btn-ok,
.shLoading-btn-contact {
  display: inline-block;
  width: 50%;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
}


.shLoading-btn-cancel {
  border-right: 1px solid #eee;
}

.shLoading-cancel {
  display: inline-block;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
}

.shLoading-btn-ok {
  color: #66CD00;
  position: relative;
}

.shLoading-head-panel .shp_title {
  font-size: 40rpx;
  text-align: center;
}

.shLoading-head-desc {
  word-break: break-all;
  padding: 20rpx 10rpx 0;

}

.shLoading-head-panel .shp_body {
  color: #666;
  text-align: center;
  padding: 25rpx 90rpx;
  line-height: 1.5;
}

.shLoading-btn-contact {
  opacity: 0;
  position: absolute;
  bottom: 0;
  right: 0;
  background: red;
  height: 100%;
  width: 100%;
}

.shLoading-input-error {
  color: red;
  font-size: 30rpx;
  padding-top: 15rpx;
}

.tabbar_box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 110rpx;
  border-top: 3rpx solid #eee;
}

.tabbar_nav {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  height: 100%;

}

.tabbar_nav text {
  font-size: 28rpx;
  color: #aaa;
}

.tabbar_icon {
  width: 61rpx;
  height: 61rpx;
}

.tabbar_page {
  height: 90rpx;
  display: block;
  box-sizing: content-box;
}



