/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  height: 100%;
  background: #eee;
}

view {
  box-sizing: border-box;
}

.padding {
  padding: 30rpx;
}

button {
  border: none;
}

/* ====================== flex ====================== */
/* flex */
.flex {
  display: flex;
}

.flex_item {
  flex: 1;
}

.alignc {
  align-items: center;
}

.alignl {
  align-content: left;
}

.alignr {
  align-content: right;
}

.text-alignC {
  text-align: center;
}

.text-alignL {
  text-align: left;
}

.text-alignR {
  text-align: right;
}

.align-center {
  align-self: center;
}

/*top-to-bottom*/
.directionC {
  flex-direction: column;
}

/* rank-average */
.justify-space {
  justify-content: space-between;
}

/* rank-center */
.justify-center {
  justify-content: center;
}

.justify-end {
  justify-content: flex-end;
}

/* rank-middle */
.self-center {
  align-self: center;
}

/* ===================== items ===================== */
.arrow-r {
  width: 20rpx;
  height: 40rpx;
}

/* ================background=================== */
.bg-primary {
  background: #fff;
}

.bg-gb {
  background: #ecedef;
}

.bg-lb {
  background: #f0f4f6;
}

.bg-blue {
  background: #0085d5;
}

.bg-green {
  background: #6fd100;
}

.bg-orange {
  background: #f2a900;
}

/* ======================  button ================== */
.btn {
  border-radius: 12rpx;
  text-align: center;
  margin: 20px auto;
}

.btn-primary {
  height: 90rpx;
  width: 90%;
  background: #0084d6;
  color: #fff;
  line-height: 90rpx;
}

.btn-assist {
  height: 90rpx;
  width: 90%;
  color: #0085d5;
  line-height: 90rpx;
  border: 1px solid #0085d5;
  background: #fff;
}

/* =================签名区域======================== */
.signature_content {
  width: 100%;
  height: 265rpx;
  margin-top: 12rpx;
  border: 2rpx solid #cbcbcb;
}

.signature_label {
  font-size: 28rpx;
  font-weight: bold;
}

/* ===================meiqia-btn====================== */
.btn-meiqia {
  display: inline;
  background: none;
  border: none;
  padding: 0;
}

.btn-meiqia::after {
  width: 0;
  height: 0;
}



